<body ng-app="app">
  <div ng-controller="controller">

 <br/>

 <div  class="canvas_area" >
  <canvas id="game_area" width="700" height="450" class="stage1"></canvas>
</div>

    <div ng-drop="true" ng-drop-success="onDropComplete($data,$event)" class="drop-container">
      
      <div ng-repeat="obj in droppedObjects" ng-drag="true" ng-drag-data="obj" ng-drag-success="onDragComplete($data,$event)" 
      class="item" style=" background-image: url('./icones/{{obj.title}}.png');           
        background-repeat: no-repeat;  background-size:55px 55px;"  >
      
      </div>
    </div>


     <div class="local_actions" ng-drop="true" ng-drop-success="onDropCompleteRemove($data,$event)">
      <ul class="draggable-objects">
        <li ng-repeat="obj in listItems">
          <div ng-drag="true" ng-drag-data="obj" style=" background-image: url('./icones/{{obj.title}}.png');           
        background-repeat: no-repeat; background-size:55px 55px;"   data-allow-transform="true" class="item"></div>
        </li>
      </ul>

      <button class="btn btn-primary" ng-click="start_game(<%= stage %>)">Começar</button>
      <button id="mostrarFonte" class="btn btn-primary">Codigo</button>
      <button class="btn btn-primary" ng-click="cylon_start('/cylon2')">Ajuda do Sphero</button>
    </div>

  
 <div id="areaFonte" class="modal">
  <div class="modal-content">
  <div class="codigoFonte">
      <b>Função Principal()
      <br/>{</b>
        <br/>
        <ul>
             <li ng-repeat="obj in droppedObjects">
                 <img src="./code/{{obj.title}}.png"/>
             </li>
        </ul>
         </li>
        <br/>

      <b>}</b>
        <a href="http://localhost:3000/stage4" class="linkstage">Próximo >></a>

      </div>
  </div>

    <span class="close"></span>
    <br/>
</body>

